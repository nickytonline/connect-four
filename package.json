{
	"name": "connect-four",
	"version": "1.0.0",
	"description": "A web based version of the classic game Connect Four",
	"type": "module",
	"scripts": {
		"prebuild": "npm run lint && CI=true npm test -- run --coverage",
		"build": "vite build",
		"dev": "vite dev",
		"preview": "vite preview",
		"test:e2e": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test": "vitest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nickytonline/connect-four.git"
	},
	"keywords": [
		"typescript",
		"svelte"
	],
	"author": "Nick Taylor",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/nickytonline/connect-four/issues"
	},
	"homepage": "https://github.com/nickytonline/connect-four#readme",
	"engines": {
		"node": ">=16"
	},
	"devDependencies": {
		"@playwright/test": "^1.27.0",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^5.40.0",
		"@typescript-eslint/parser": "^5.40.0",
		"@vitest/coverage-c8": "^0.24.1",
		"eslint": "^8.25.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.8.0",
		"svelte": "^3.49.0",
		"svelte-check": "^2.9.2",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.0",
		"typescript": "^4.7.4",
		"vite": "^3.1.7",
		"vitest": "^0.24.1"
	}
}
