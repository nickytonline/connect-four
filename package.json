{
	"name": "connect-four",
	"version": "1.0.0",
	"description": "A web based version of the classic game Connect Four",
	"type": "module",
	"scripts": {
		"prebuild": "npm run lint && CI=true npm test -- run --coverage",
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint --ext .cjs,.js,.ts,.svelte src",
		"test": "vitest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nickytonline/connect-four.git"
	},
	"keywords": [
		"typescript",
		"svelte"
	],
	"author": "Nick Taylor",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/nickytonline/connect-four/issues"
	},
	"homepage": "https://github.com/nickytonline/connect-four#readme",
	"engines": {
		"node": ">=16.17.1"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^1.0.2",
		"@tsconfig/svelte": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^5.38.0",
		"@typescript-eslint/parser": "^5.38.0",
		"@vitest/coverage-c8": "^0.23.4",
		"eslint": "^8.24.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.49.0",
		"svelte-check": "^2.9.1",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.0",
